<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    tools:context=".food_diary_goal.FoodDiaryGoalNewCDobActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="18dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo_color" />
        <!-- //Logo -->

        <!-- Headline -->
        <TextView
            android:id="@+id/textViewHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dp"
            android:text="@string/when_is_your_birthday"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorDarkGray" />
        <!-- //Headline -->

        <!-- New Goal form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorLightGray">


            <!-- Dob -->
            <LinearLayout
                android:id="@+id/linearLayoutDob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="18dp"
                android:background="@color/colorWhite"> <!-- Grey padding -->

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:id="@+id/tableRowDOBDay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="6dp"
                        android:paddingLeft="12dp"
                        android:background="@color/colorWhite"> <!-- Grey padding -->

                        <TextView
                            android:id="@+id/textViewDOBDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:layout_marginBottom="12dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/day"/>

                        <Spinner
                            android:id="@+id/spinnerDOBDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp" />


                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRowDOBMonth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="6dp"
                        android:paddingLeft="12dp"
                        android:background="@color/colorWhite"> <!-- Grey padding -->

                        <TextView
                            android:id="@+id/textViewDOBMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:layout_marginBottom="12dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/month"/>


                        <Spinner
                            android:id="@+id/spinnerDOBMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp" />


                    </TableRow>
                    <TableRow
                        android:id="@+id/tableRowDOBYear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="6dp"
                        android:paddingLeft="12dp"
                        android:background="@color/colorWhite"> <!-- Grey padding -->

                        <TextView
                            android:id="@+id/textViewDOBYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:layout_marginBottom="12dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/year"/>


                        <Spinner
                            android:id="@+id/spinnerDOBYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp" />

                    </TableRow>
                </TableLayout>


            </LinearLayout>
            <!-- //Dob -->


            <!-- Next button and Switch measurement -->
            <LinearLayout
                android:id="@+id/linearLayoutButtons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="18dp"> <!-- Grey padding -->
                <Button
                    android:id="@+id/buttonNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/btn_primary"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>
            <!-- //Next button and Switch measurement -->


        </LinearLayout>
        <!-- //New Goal form -->

        <!-- Dynamic text -->
        <TextView
            android:id="@+id/textViewDynamicText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blank" />
        <!-- //Dynamic text -->
    </LinearLayout>
</ScrollView>