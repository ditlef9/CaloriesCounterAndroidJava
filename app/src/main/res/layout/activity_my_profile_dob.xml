<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    tools:context=".food_diary_goal.MyProfileDobActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="18dp">



        <!-- Dob headline -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewHeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_of_birth"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorBlack" />
            <TextView
                android:id="@+id/textViewHeadlineB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorBlack" />
        </LinearLayout>
        <!-- //Dob headline -->

        <!-- Dob input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/tableRowDOBDay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="6dp"
                    android:paddingLeft="12dp"
                    android:background="@color/colorWhite"> <!-- Grey padding -->

                    <TextView
                        android:id="@+id/textViewDOBDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="12dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/day"/>

                    <Spinner
                        android:id="@+id/spinnerDOBDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />


                </TableRow>

                <TableRow
                    android:id="@+id/tableRowDOBMonth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="6dp"
                    android:paddingLeft="12dp"
                    android:background="@color/colorWhite"> <!-- Grey padding -->

                    <TextView
                        android:id="@+id/textViewDOBMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="12dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/month"/>


                    <Spinner
                        android:id="@+id/spinnerDOBMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />


                </TableRow>
                <TableRow
                    android:id="@+id/tableRowDOBYear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="6dp"
                    android:paddingLeft="12dp"
                    android:background="@color/colorWhite"> <!-- Grey padding -->

                    <TextView
                        android:id="@+id/textViewDOBYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="12dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/year"/>


                    <Spinner
                        android:id="@+id/spinnerDOBYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />

                </TableRow>
            </TableLayout>
        </LinearLayout>
        <!-- //Dob input -->


        <!-- Save button -->
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:background="@drawable/btn_primary"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorWhite" />
        <!-- //Save button -->

    </LinearLayout>
</ScrollView>