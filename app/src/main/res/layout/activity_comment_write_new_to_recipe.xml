<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    tools:context=".recipes.CommentWriteNewToRecipeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/textViewRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorBlack"
            android:gravity="center_horizontal"
            android:text="Title" />
        <!-- //Title -->


        <!-- Comment Title -->

        <TextView
            android:id="@+id/textViewCommentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="@string/title"/>
        <EditText
            android:id="@+id/editTextCommentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:ems="10"/>
        <!-- //Comment Title -->


        <!-- Comment Rating -->
        <TextView
            android:id="@+id/textViewCommentSetRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="@string/set_rating"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewStar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_star_border_black_24px" />

            <ImageView
                android:id="@+id/imageViewStar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_star_border_black_24px" />

            <ImageView
                android:id="@+id/imageViewStar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_star_border_black_24px" />

            <ImageView
                android:id="@+id/imageViewStar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_star_border_black_24px" />

            <ImageView
                android:id="@+id/imageViewStar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_star_border_black_24px" />
        </LinearLayout>
        <!-- //Comment Rating -->

        <!-- Comment Text -->
        <TextView
            android:id="@+id/textViewCommentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="@string/comment"/>
        <EditText
            android:id="@+id/editTextComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:ems="10"
            android:inputType="textMultiLine"/>
        <!-- //Comment Text -->

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_default"
            android:text="@string/send" />
        <!-- //Comment and submit -->

        <!-- Dynamic Text -->
        <TextView
            android:id="@+id/textViewDynamicText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blank"
            />
        <!-- //Dynamic Text -->
    </LinearLayout>
</ScrollView>